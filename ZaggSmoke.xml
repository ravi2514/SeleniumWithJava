<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">


<suite name="SmokeSuite" parallel="tests">
	<parameter name="browser" value="firefox" />
	<parameter name="appUrl" value="https://staging.zagg.com/" />

	<listeners>
		<listener class-name="org.uncommons.reportng.HTMLReporter" />
		<listener class-name="org.uncommons.reportng.JUnitXMLReporter" />
		<listener class-name="com.lib.ExtentReportNG" />
		<listener class-name="com.lib.TestNGCustomReportListener" />
		<listener class-name="com.lib.RetryListener" />
	</listeners>		
	
	
	<test name=" Zagg Smoke ">
		<parameter name="browser" value="firefox" />
		<parameter name="appUrl" value="https://staging.zagg.com/" />
	<classes>
		<class name="com.lib.BrowserIntializer" />
		<class name="zagg.accountRegistration.LoginTests" >
			<methods>			
				<include name ="loginWithValidCredentials"/>										
			</methods>
		</class>
		<class name="zagg.prodRegistration.ProductRegistartionTests" >
		<methods>				
				<include name="verifyAllFields"/>					
				<include name="registerProdThruSerialNumber"/>						
		</methods>			
		</class>
		
		<class name="zagg.warrantReplacement.WarrantReplacementTests" >
			<methods>			
				 <include name ="validateWRScreens"/>	
				 <include name ="WR_replaceUpgradeProduct"/>							
			</methods>
		</class>
		
		<class name="zagg.accountGeneral.PurchaseHistory"/>
		<class name="zagg.accountGeneral.NewsSubscriptionTests">
			<methods>
				<include name= "newsSubcrp_TypePreferences"/>
			</methods>		
		</class>
		<class name="zagg.prodRegistration.PRToolTipTests">
			<methods>			
				 <include name = "PR_WarrantyExpiredProduct"/>
				 <include name = "PR_OutOfStockForReplacement"/>						
			</methods>
		</class>
		<class name="zagg.shop.shoppingTests" >
		 	<methods>
			 	<include name = "shop_placeOrderProduct"/>
			  	<include name = "shop_placeOrderWithAmazonPay"/>
			  	<include name = "shop_placeOrderWithoutUser"/>			 
			 </methods>	
		</class>
	    <class name="zagg.prodRegistration.UK_EU_ProductRegistartionTests" >
			<methods>
				 <include name = "loginIntoUKCustomer"/>
				 <include name = "UK_RegisterProdThruSerialNumberForUK"/>
				 <include name = "loginAsEUCustomer"/>
				 <include name = "EU_RegisterProdThruSerialNumberForEU"/>			
			 </methods>			
		</class>			
		 <class name="zagg.shop.UK_ShoppingTests" >
			 <methods>
			 	<include name = "loginIntoUKCustomer"/>
			  	<include name = "UK_PlaceOrderWithCreditCard"/>		 
			 </methods>	
		 </class>
		 
		  </classes>
	</test>
</suite> 
